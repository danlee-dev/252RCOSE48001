# DocScanner AI Environment Variables
# Copy this file to .env and fill in the values

# ========================================
# Project Settings
# ========================================
PROJECT_NAME=DocScanner AI
API_V1_STR=/api/v1
PYTHONDONTWRITEBYTECODE=1

# ========================================
# Database (Docker PostgreSQL)
# ========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=docscanner
POSTGRES_HOST=localhost
POSTGRES_PORT=5435

# pgAdmin (Docker)
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# ========================================
# Redis & Celery (Docker)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
CELERY_BROKER_URL=redis://localhost:6379/0

# ========================================
# Neo4j Graph Database
# ========================================
# Local (Docker)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Cloud (Neo4j Aura - https://neo4j.com/cloud/aura-free/)
# NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=generated_password

# ========================================
# Elasticsearch
# ========================================
# Local (Docker)
ES_URL=http://localhost:9200

# Cloud (Elastic Cloud - https://cloud.elastic.co)
# ES_URL=https://your-deployment.es.us-east-1.aws.elastic.cloud:9243
# ES_API_KEY=your_elastic_api_key

# ========================================
# CORS Settings
# ========================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ========================================
# JWT Authentication
# ========================================
SECRET_KEY=your_super_secret_key_for_jwt_signing

# ========================================
# LLM API Keys (Required - at least one)
# ========================================
# OpenAI API Key - https://platform.openai.com
OPENAI_API_KEY=sk-your_openai_api_key

# Google Gemini API Key - https://aistudio.google.com
GEMINI_API_KEY=AIza_your_gemini_api_key

# ========================================
# Tavily Web Search (Optional)
# ========================================
# Get your API key at https://tavily.com
# Used for real-time web search in chat
TAVILY_API_KEY=tvly-your_tavily_api_key

# ========================================
# LLM Model Configuration (Optional)
# ========================================
# Retrieval model (fast, cost-effective)
LLM_RETRIEVAL_MODEL=gemini-2.5-flash-lite

# Reasoning model (high quality)
LLM_REASONING_MODEL=gpt-5-mini

# HyDE model (query expansion)
LLM_HYDE_MODEL=gpt-4o

# Quick Scan OCR model (speed-optimized)
LLM_SCAN_MODEL=gemini-2.5-flash

# ========================================
# Dify Integration (Optional)
# ========================================
DIFY_API_URL=http://localhost/v1
DIFY_API_KEY=your_dify_api_key

# ========================================
# Legal API (Optional)
# ========================================
# open.law.go.kr user ID (email prefix before @)
LEGAL_API_USER_ID=your_email_id

# ========================================
# Internal Service Authentication
# ========================================
INTERNAL_API_KEY=your_internal_api_key

