# DocScanner AI Environment Variables
# Copy this file to .env and fill in the values

# ========================================
# Database (Docker PostgreSQL)
# ========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=docscanner
POSTGRES_HOST=localhost
POSTGRES_PORT=5435

# ========================================
# Redis (Docker)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ========================================
# Neo4j Graph Database (Docker)
# ========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ========================================
# Elasticsearch (Docker)
# ========================================
ELASTICSEARCH_URL=http://localhost:9200
ES_URL=http://localhost:9200

# ========================================
# JWT Authentication
# ========================================
SECRET_KEY=your_super_secret_key_for_jwt_signing

# ========================================
# LLM API Keys (Required - at least one)
# ========================================
# OpenAI API Key - https://platform.openai.com
OPENAI_API_KEY=sk-your_openai_api_key

# Google Gemini API Key - https://aistudio.google.com
GEMINI_API_KEY=AIza_your_gemini_api_key

# ========================================
# Tavily Web Search (Optional)
# ========================================
# Get your API key at https://tavily.com
# Used for real-time web search in chat
TAVILY_API_KEY=tvly-your_tavily_api_key

# ========================================
# LLM Model Configuration (Optional)
# ========================================
# Retrieval model (fast, cost-effective)
LLM_RETRIEVAL_MODEL=gemini-2.5-flash-lite

# Reasoning model (high quality)
LLM_REASONING_MODEL=gpt-5-mini

# HyDE model (query expansion)
LLM_HYDE_MODEL=gpt-4o

# ========================================
# Internal Service Authentication
# ========================================
INTERNAL_API_KEY=your_internal_api_key
